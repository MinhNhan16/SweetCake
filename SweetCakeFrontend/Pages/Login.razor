@page "/login"

@using System.ComponentModel.DataAnnotations
@using SweetCakeFrontend.Components
@using SweetCakeFrontend.Models
@inject NavigationManager NavigationManager
@inject SweetCakeFrontend.Services.AuthService AuthService
@inject IJSRuntime JS

<div class="cake-bg flex min-h-screen items-center justify-center">
    <div class="container mx-auto">
        <EditForm Model="@loginModel"
                  OnValidSubmit="HandleValidSubmit"
                  class="mx-auto max-w-[30rem] rounded-lg border bg-white p-8 shadow-sm">
            <DataAnnotationsValidator />

            <div class="space-y-4">
                <h3 class="text-2xl font-medium">Đăng nhập</h3>
                <div>
                    <label for="email-address" class="mb-2">Email</label>
                    <InputText id="email-address"
                               type="email"
                               @bind-Value="loginModel.Email"
                               class="h-10 w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:outline-none focus:border-primary focus:border-primary"
                               placeholder="abc@gmail.com" />
                    <ValidationMessage For="@(() => loginModel.Email)" class="text-red-500 text-xs mt-1" />
                </div>

                <div>
                    <label for="password" class="mb-2">Mật khẩu</label>
                    <InputText id="password"
                               @bind-Value="loginModel.Password"
                               class="h-10 w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:outline-none focus:border-primary focus:border-primary"
                               placeholder="Nhập mật khẩu"
                               type="password" />
                    <ValidationMessage For="@(() => loginModel.Password)" class="text-red-500 text-xs mt-1" />
                </div>

                <div>
                    <Button Variant="Button.ButtonVariant.Primary" CssClass="w-full" ButtonType="submit">
                        @if (isLoading)
                        {
                            <div role="status">
                                <svg aria-hidden="true" class="fill-primary inline h-4 w-4 animate-spin text-gray-100" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor" />
                                    <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill" />
                                </svg>
                                <span class="sr-only">Loading...</span>
                            </div>
                        }

                        Đăng nhập
                    </Button>
                    <div class="flex flex-nowrap items-center py-3">
                        <span class="h-[1px] flex-1 bg-gray-200"></span>
                        <span class="px-4 text-sm">Hoặc</span>
                        <span class="h-[1px] flex-1 bg-gray-200"></span>
                    </div>
                    <div class="mx-auto w-fit">
                        <div id="g_id_signin" ></div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="mt-2 text-center text-sm text-red-600">
                    @errorMessage
                </div>
            }
        </EditForm>
    </div>
</div>


@code {
    private LoginModel loginModel = new LoginModel();
    private string errorMessage;
    private bool isLoading = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var dotNetRef = DotNetObjectReference.Create(this);
            await JS.InvokeVoidAsync("googleAuth.initialize",
                                     "79009505879-t2vvnntcrovscogqkjfriobc4bdlem53.apps.googleusercontent.com",
                                     dotNetRef);
        }
    }

    [JSInvokable]
    public async Task OnGoogleLogin(string credential)
    {
        var response =  await AuthService.GoogleLogin(new GoogleLoginRequest
        {
            Token = credential
        });

        if (!response)
        {
            errorMessage = "Tài khoản không hợp lệ.";
        }
        else
        {
            NavigationManager.NavigateTo("/");
        }
    }


    private async Task HandleValidSubmit()
    {
        try
        {
            isLoading = true;
            errorMessage = "";
            var response = await AuthService.LoginAsync(loginModel);

            if (!response)
            {
                errorMessage = "Tài khoản hoặc mật khẩu không hợp lệ.";
            } else
            {
                NavigationManager.NavigateTo("/");
            }

        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }
}
